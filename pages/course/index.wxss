.content-wrap{
  padding: 0 30rpx;
}
.course-wrap{
    margin-top: 40rpx;
    height: 180rpx;
    display: flex;
    flex: 1;
    justify-content: space-between;
  
}

.course-wrap .course-img{
    width: 240rpx;
    height: 180rpx;
    border-radius: 16rpx;
}
.course-wrap .course-content{
 margin-left: 30rpx;
}
.course-wrap .course-content .title{
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    width: 412rpx;
    overflow: hidden;
}
.course-wrap .course-content .des{
    margin-top: 14rpx;
   font-size: 24rpx;
    color: #999;
}
.course-wrap .course-content .des .cut-off{
    padding: 0 20rpx;
}
.course-wrap .course-content  .label-wrap{
    margin-top: 17rpx;
}
.course-wrap .course-content .label-wrap .label{
  border: 1px solid #EBEBEB;
    padding:  3rpx 12rpx;
    display: inline-block;
    font-size: 20rpx;
    border-radius: 6rpx;
    color: #38D700;
    margin-right: 30rpx;
}