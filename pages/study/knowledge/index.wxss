.content-wrap {
  padding: 0 30rpx;
}

.item {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.item .img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.item .title {
  font-size: 36rpx;
  font-weight: 600;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;

}

.text-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-wrap: wrap;
}

.watch {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999999
}
.bth{
  height: 64rpx;
  width: 124rpx;
  background:#2A54FF;
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  text-align: center;
  line-height: 64rpx;
  margin: 10rpx 0;
  flex-shrink: 0;
  
}