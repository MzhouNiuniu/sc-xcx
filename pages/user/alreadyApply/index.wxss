.content-wrap {
  padding: 0 30rpx;
}

.item {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;

}

.item .img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.item .title {
  font-size: 30rpx;
  font-weight: 600;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;

}

.text-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-wrap: wrap;
}

.watch {
  font-size: 24rpx;
  color: #999999
}