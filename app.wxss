/* loading */
.loading-box {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #c4c1c1;
  /* margin-bottom: 30rpx; */
  padding: 30rpx 0;
  width: 100%;
}
.loading-box text{
  color: #c4c1c1;
}

.loading-box>image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
  animation: rotate 2s linear infinite;
}


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
image{
  width: 100%;

}
.l{
  float: left;
}
.r{
  float: right;
}